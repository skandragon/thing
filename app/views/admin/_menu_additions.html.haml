%li.dropdown
  %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}}
    Admin
    %b.caret
  %ul.dropdown-menu
    %li.dropdown-submenu
      = link_to 'Database', '#'
      %ul.dropdown-menu
        %li= link_to 'Backups', admin_backups_path
        %li= link_to 'Database Summary', admin_tracks_path
    %li.dropdown-submenu
      = link_to 'Reports and Forms', '#'
      %ul.dropdown-menu
        %li= link_to 'Instructor Sign In', instructor_signin_admin_reports_path(format: :pdf)
        %li= link_to 'Kingdom War Points', kingdom_war_points_admin_reports_path(format: :csv)
      %li.dropdown-submenu
        = link_to 'Per-day schedules', '#'
        %ul.dropdown-menu
          - Instructable::CLASS_DATES.each do |date|
            %li= link_to "#{date} onward", calendar_path(date, format: :pdf, target: '_blank')

    %li.dropdown-submenu
      = link_to 'Email Addresses', '#'
      %ul.dropdown-menu
        %li= link_to 'Instructors', admin_instructor_email_list_index_path
        %li= link_to 'Track Leads', admin_track_lead_email_list_index_path
    %li.divider
    %li= link_to 'Users', admin_users_path
    %li= link_to 'Trackless Classes', coordinator_instructables_path(track: 'No Track')
